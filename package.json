{
  "name": "front-guard",
  "version": "0.0.3",
  "description": "Full-featured frontend security package for input sanitization, XSS protection, and secure UI components.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/frontend-npm-package/front-guard"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "require": "./dist/react/index.cjs",
      "import": "./dist/react/index.mjs"
    },
    "./vue": {
      "types": "./dist/vue/index.d.ts",
      "require": "./dist/vue/index.cjs",
      "import": "./dist/vue/index.mjs"
    },
    "./svelte": {
      "types": "./dist/svelte/index.d.ts",
      "require": "./dist/svelte/index.cjs",
      "import": "./dist/svelte/index.mjs"
    },
    "./angular": {
      "types": "./dist/angular/index.d.ts",
      "require": "./dist/angular/index.cjs",
      "import": "./dist/angular/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src/",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "security",
    "xss",
    "sanitization",
    "react",
    "frontend",
    "input-sanitization"
  ],
  "author": "Gowtham Shankar",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "svelte": ">=3.0.0",
    "vue": ">=3.0.0",
    "@angular/core": ">=14.0.0",
    "@angular/common": ">=14.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "svelte": {
      "optional": true
    },
    "@angular/core": {
      "optional": true
    },
    "@angular/common": {
      "optional": true
    }
  },
  "devDependencies": {
    "@angular/core": "^21.0.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "eslint": "^9.15.0",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.2.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.2",
    "svelte": "^5.43.14",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.5",
    "vue": "^3.5.25",
    "zone.js": "^0.15.1"
  },
  "dependencies": {
    "dompurify": "^3.2.1"
  }
}